@page "/employees/{employeeId:int}/skills"
    
<h3>Skills</h3>
<br>
<div class="row">
    <div class="col-md-10">
        @*Place for search and sort*@
    </div>
    <div class="col-md-2">
        <a href="@($"/employees/{employee.Id}/skill/create")">Assign Skill</a>
    </div>
</div>
<div class="row">
    <div class="col">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Created</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var skill in SkillsList)
                {
                    <tr>
                        <td class="align-middle">
                            @skill.Name
                        </td>
                        <td class="align-middle">
                            @skill.Description
                        </td>
                        <td class="align-middle">
                            @skill.CreatedAt
                        </td>
                        <td class="align-middle">
                            <button type="button" class="btn btn-danger" @onclick="@(async () => await DeleteSkill(skill.Id))">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="form-group">
    <button class="btn btn-primary" @onclick="Back">Back</button>
</div>